<div class = "col-md-6 col-md-offset-3">
	<div class = "new-review-form">	

	<h1>Edit Your Review</h1>

	<%= simple_form_for([@book, @review]) do |f| %>
	<div id = "form_rating">
	<label>Rating</label>
	</div>
	<p><p>
		
		<%= f.input :comment %> 

		<%= f.button :submit, :class => "btn-custom2" %>

	<% end %>
	
	</div>
</div>

<script type="text/javascript">
$('#form_rating').raty({
	path: '/assets',
	scoreName: 'review[rating]'
});
</script>


